{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2020",

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
